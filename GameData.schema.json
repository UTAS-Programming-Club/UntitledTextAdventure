{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "name",
    "defaultStats",
    "screens",
    "state",
    "rooms",
    "equipment"
  ],
  "properties": {
    "name": {
      "type": "string"
    },
    "defaultStats": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "health",
        "stamina",
        "physAtk",
        "magAtk",
        "physDef",
        "magDef"
      ],
      "properties": {
        "health": {
          "type": "integer",
          "minimum": 0,
          "maximum": 100
        },
        "stamina": {
          "type": "integer",
          "minimum": 0,
          "maximum": 100
        },
        "physAtk": {
          "type": "integer",
          "minimum": 0,
          "maximum": 100
        },
        "magAtk": {
          "type": "integer",
          "minimum": 0,
          "maximum": 100
        },
        "physDef": {
          "type": "integer",
          "minimum": 0,
          "maximum": 100
        },
        "magDef": {
          "type": "integer",
          "minimum": 0,
          "maximum": 100
        }
      }
    },
    "screens": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "body",
          "extraText",
          "inputType",
          "buttons"
        ],
        "properties": {
          "body": {
            "type": "string"
          },
          "extraText": {
            "type": "string"
          },
          "customScreenCode": {
            "type": "integer",
            "minimum": 0,
            "exclusiveMaximum": 65565
          },
          "inputType": {
            "type": "integer",
            "exclusiveMinimum": 0,
            "maximum": 255
          },
          "buttons": {
            "type": "array",
            "items": {
              "type": "object",
              "additionalProperties": false,
              "required": [
                "title",
                "outcome"
              ],
              "properties": {
                "title": {
                  "type": "string"
                },
                "outcome": {
                  "type": "integer",
                  "exclusiveMinimum": 0,
                  "maximum": 65565
                },
                "newScreenID": {
                  "type": "integer",
                  "minimum": 0,
                  "exclusiveMaximum": 65565
                }
              }
            }
          },
          "previousScreenID": {
            "type": "integer",
            "minimum": 0,
            "exclusiveMaximum": 65565
          },
          "nextScreenID": {
            "type": "integer",
            "minimum": 0,
            "exclusiveMaximum": 65565
          }
        }
      }
    },
    "state": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "screenID",
          "stateID",
          "size",
          "default",
          "save"
        ],
        "properties": {
          "screenID": {
            "type": "integer",
            "minimum": 0,
            "exclusiveMaximum": 65535
          },
          "stateID": {
            "type": "integer",
            "minimum": 0
          },
          "size": {
            "type": "integer",
            "exclusiveMinimum": 0
          },
          "default": {
            "type": "integer"
          },
          "save": {
            "type": "boolean"
          }
        }
      }
    },
    "rooms": {
      "type": "object",
       "additionalProperties": false,
       "required": [
         "floorSize",
         "roomsArray"
       ],
      "properties": {
        "floorSize": {
          "type": "integer",
          "minimum": 1,
          "maximum": 255
        },
        "roomsArray": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "type",
              "position"
            ],
            "properties": {
              "type": {
                "type": "integer",
                "minimum": 0,
                "exclusiveMaximum": 255
              },
              "position": {
                "type": "array",
                "items": {
                  "type": "integer",
                  "minimum": 0,
                  "exclusiveMaximum": 255
                },
                "minItems": 2,
                "maxItems": 2
              },
              "description": {
                "type": "string"
              },
              "percentageChance": {
                "type": "integer",
                "exclusiveMinimum": 0,
                "maximum": 100
              },
              "healthChange": {
                "type": "integer",
                "minimum": -100,
                "maximum": 100
              }
            }
          }
        }
      }
    },
    "equipment": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "name",
          "physAtkMod",
          "physDefMod",
          "magAtkMod",
          "magDefMod"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "physAtkMod": {
            "type": "integer",
            "minimum": -100,
            "maximum": 100
          },
          "magAtkMod": {
            "type": "integer",
            "minimum": -100,
            "maximum": 100
          },
          "physDefMod": {
            "type": "integer",
            "minimum": -100,
            "maximum": 100
          },
          "magDefMod": {
            "type": "integer",
            "minimum": -100,
            "maximum": 100
          }
        }
      }
    }
  }
}
